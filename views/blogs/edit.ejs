<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/nav.ejs') %>

    <div class="create-blog content">
        <div class="special-title"><h2>Edit the blog: "<%= blog.title %>"</h2></div>
        <form action="/blogs/edit/<%= blog._id %>" method="POST">
            <label for="title">Blog title: </label>
            <input type="text" id="title" name="title" value=<%= blog.title %>>
            <label for="title">Blog snippet:</label>
            <input type="text" id="snipped" name="snippet" value=<%= blog.snippet %>>
            <label for="title">Blog body:</label>
            <textarea id="body" name="body"><%= blog.body %></textarea>
            <div style="margin: auto; text-align:center"><button class="btn btn-outline-secondary">Submit</button></div>
        </form>
    </div>
<%- include('../partials/footer.ejs') %>

</body>
</html>